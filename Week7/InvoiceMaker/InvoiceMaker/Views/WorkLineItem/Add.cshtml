@model InvoiceMaker.FormModels.CreateWorkLineItemView


@using (Html.BeginForm("Add", "WorkLineItem", FormMethod.Post, new { @class = "pure-form pure-form-aligned" }))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <div class="pure-control-group">
            @Html.LabelFor(model => model.WorkDoneId)
            @Html.DropDownListFor(model => model.WorkDoneId, Model.WorkDoneSelectListItems)
            @Html.ValidationMessageFor(model => model.WorkDoneId, "", new { @class = "pure-form-message-inline" })
        </div>

        <div class="pure-controls">
            @Html.ActionLink("Cancel", "Edit", "Invoices", new { id = Model.InvoiceId }, new { @class = "pure-button" })
            <button type="submit" class="pure-button pure-button-primary">Submit</button>
        </div>
    </fieldset>
}